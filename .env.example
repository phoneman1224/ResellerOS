# ResellerOS Configuration

# Application
APP_NAME=ResellerOS
APP_ENV=production
DEBUG=false

# Database
DATABASE_URL=sqlite:///./reselleros.db

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# eBay API Credentials
# Get these from: https://developer.ebay.com/
EBAY_CLIENT_ID=your_client_id_here
EBAY_CLIENT_SECRET=your_client_secret_here
EBAY_REDIRECT_URI=http://localhost:8080
EBAY_ENVIRONMENT=production  # or 'sandbox' for testing

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3
OLLAMA_TIMEOUT=30

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ENCRYPTION_KEY=change-this-to-a-random-32-byte-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/reselleros.log
